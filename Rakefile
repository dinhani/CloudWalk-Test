require 'rake/testtask'
require 'rubocop/rake_task'

# ------------------------------------------------------------------------------
# Execution
# ------------------------------------------------------------------------------
task :run do
    ruby '-I "lib" bin/app.rb'
end

# ------------------------------------------------------------------------------
# Test
# ------------------------------------------------------------------------------
Rake::TestTask.new do |t|
    t.libs = %w(lib spec)
    t.test_files = FileList['spec/**/*_spec.rb']
    t.verbose = true
end

# ------------------------------------------------------------------------------
# Linter
# ------------------------------------------------------------------------------
RuboCop::RakeTask.new(:lint)